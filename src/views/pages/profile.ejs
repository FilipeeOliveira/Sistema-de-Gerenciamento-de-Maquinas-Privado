<% const bodyContent=` <section class="section">
  <div class="section-header">
    <h1>Perfil</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
      <div class="breadcrumb-item">Perfil</div>
    </div>
  </div>
  <div class="section-body">
    <h2 class="section-title">Olá, Joaozinho!</h2>
    <p class="section-lead">
      Mude suas informações de Perfil.
    </p>
  </div>
  <div class="col-12 col-md-12 col-lg-7 mx-auto">
    <div class="card profile-widget">
      <div class="profile-widget-header d-flex justify-content-center">
        <img alt="image" src="../assets/img/avatar/avatar-4.png" class="rounded-circle profile-widget-picture">
      </div>
      <div class="card">
        <form method="post" class="needs-validation" novalidate="">
          <div class="card-header">
            <h4>Editar Informações</h4>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="form-group col-md-6 col-12">
                <label for="first-name">Primeiro Nome</label>
                <input type="text" class="form-control" id="first-name" value="" required="">
                <div class="invalid-feedback">
                  Por favor preencha o primeiro nome
                </div>
              </div>
              <div class="form-group col-md-6 col-12">
                <label for="last-name">Último Nome</label>
                <input type="text" class="form-control" id="last-name" value="" required="">
                <div class="invalid-feedback">
                  Por favor preencha o seu último nome
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-6 col-12">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" value="" required="">
                <div class="invalid-feedback">
                  Por favor preencha o seu email
                </div>
              </div>
              <div class="form-group col-md-6 col-12">
                <label for="phone">Telefone</label>
                <input type="tel" class="form-control" id="phone" value="" required="">
                <div class="invalid-feedback">
                  Por favor preencha o seu telefone
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-12">
                <a href="auth-reset-password.html" class="d-flex justify-content-center">
                  Trocar senha
                </a>
              </div>
            </div>
          </div>
          <div class="card-footer text-right">
            <button class="btn btn-primary">Salvar Alterações</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  </section>
  `;
  %>

  <%- include('layouts/master.ejs', {bodyContent: bodyContent}) %>


    <script src="../node_modules/summernote/dist/summernote-bs4.js"></script>