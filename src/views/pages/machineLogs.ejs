<% const bodyContent = `
<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Logs de Alterações de Máquinas</h1>
      <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
        <div class="breadcrumb-item"><a href="#">Cadastros</a></div>
        <div class="breadcrumb-item">Logs de Alterações de Máquinas</div>
      </div>
    </div>
    <div class="section-body">
      <h2 class="section-title">Logs de Alterações</h2>
      <p class="section-lead">
        Veja abaixo o histórico de alterações de status das máquinas.
      </p>
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h4>Histórico de Logs</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>ID da Máquina</th>
                      <th>Status Antigo</th>
                      <th>Status Novo</th>
                      <th>Alterado Em</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% machineLogs.forEach(log => { %>
                      <tr>
                        <td><%= log.machineId %></td>
                        <td><%= log.oldStatus %></td>
                        <td><%= log.newStatus %></td>
                        <td><%= new Date(log.changedAt).toLocaleString() %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="card-footer text-right">
              <nav class="d-inline-block">
                <ul class="pagination mb-0">
                  <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>">Anterior</a>
                  </li>
                  <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                  <% } %>
                  <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Próximo</a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
` %>

<% const additionalStyles = `
<style>
  .table-striped tbody tr:nth-of-type(odd) {
    background-color: rgba(0,0,0,.05);
  }
  .pagination .page-item.disabled .page-link {
    pointer-events: none;
    background-color: #e9ecef;
    border-color: #dee2e6;
  }
</style>
` %>

<% const additionalScripts = `` %>

<%- include('layouts/master.ejs', { bodyContent, additionalStyles, additionalScripts }) %>
