<!-- views/pages/machineLogs.ejs -->

<% const bodyContent = `
<section class="section">
  <div class="section-header">
    <h1>Logs de Status da Máquina</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
      <div class="breadcrumb-item"><a href="#">Máquinas</a></div>
      <div class="breadcrumb-item">Logs de Status</div>
    </div>
  </div>
  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Histórico de Status</h4>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Data</th>
                <th>Status</th>
                <th>Usuário</th>
                <th>Comentário</th>
              </tr>
            </thead>
            <tbody>
              ${logs.map(log => `
              <tr>
                <td>${new Date(log.createdAt).toLocaleDateString()}</td>
                <td>${log.status}</td>
                <td>${log.user}</td>
                <td>${log.comment}</td>
              </tr>
              `).join('')}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

`;
%>

<% const additionalStyles=` <link rel="stylesheet" href="../../../node_modules/selectric/public/selectric.css">

  `;
  %>

  <% const additionalScripts=` <script src="../../../assets/js/page/deleteMachine.js">
    </script>
    <script src="../../../node_modules/selectric/public/jquery.selectric.min.js"></script>
    <script src="../../../assets/js/page/machines.js"></script>
    `;
    %>

    <%- include('layouts/master.ejs', { bodyContent: bodyContent, additionalScripts:additionalScripts,
      additionalStyles:additionalStyles })  %>